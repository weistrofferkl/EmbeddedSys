    tmr :> t;
    t+= 2*XS1_TIMER_HZ;

    tmr when timerafter(t):> void;

    //Uses servos to drive car straight using additional function
    goStraightNSigs(out_motor_cmd_chan, encoderChan, 40);

    //Turns the car ~90 degrees depending on the testing surface
